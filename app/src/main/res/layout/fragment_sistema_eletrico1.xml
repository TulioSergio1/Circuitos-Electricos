<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".fragmentos.SistemaEletrico1">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Corrente Elétrica dos Cabos -->

        <TextView
            android:id="@+id/solarVoltsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Volts: -- V"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/placaSolar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonVoltar" />

        <TextView
            android:id="@+id/cableCurrentText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/placaSolar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp"
            android:text="Corrente: -- A"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/radioButton2"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placaSolar" />

        <TextView
            android:id="@+id/inverterVoltageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Inversor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Volts Convertidos: -- V"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Inversor" />

        <ImageView
            android:id="@+id/placaSolar"
            android:layout_width="160dp"
            android:layout_height="110dp"
            android:layout_marginTop="60dp"

            android:background="@drawable/placa_solar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/caboPreto1"
            android:layout_width="9dp"
            android:layout_height="109dp"
            android:background="@drawable/cabo_preto"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/Inversor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.565"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placaSolar" />

        <ImageView
            android:id="@+id/caboVermelho1"
            android:layout_width="9dp"
            android:layout_height="109dp"
            android:background="@drawable/cabo_vermelho"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/Inversor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.425"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/placaSolar"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/lampada"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.066"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/lightView2"
            android:layout_width="75dp"
            android:layout_height="69dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/transparent"
            android:elevation="1dp"
            android:src="@drawable/light_circle_lamp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.035"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/Inversor"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_marginTop="108dp"
            android:background="@drawable/inversor_solar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placaSolar"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="16dp"
            android:src="@drawable/baseline_turn_on_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placaSolar" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="130dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/Inversor"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="130dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placaSolar" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/Inversor"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/barlow_semibold"
            android:text="Radiação Solar Incidente (Santa Luzia-PB)"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="330dp"
            android:layout_height="160dp"
            android:layout_marginBottom="110dp"
            android:src="@drawable/inversor_display"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonDadosMax"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/shape_button"
            android:text="Max"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="@id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonDadosMin"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/shape_button"
            android:text="Min"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2" />

        <TextView
            android:id="@+id/dados"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_semibold"
            android:text="Serão mostrados aqui os dados referentes ao mês de novembro (máx.) e junho (min.)"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.381"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.477" />

        <TextView
            android:id="@+id/dadosMax"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_semibold"
            android:text="Novembro é o período com maior irradiação solar durante o ano: 6,60 kWh/m².dia"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.381"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.477" />

        <TextView
            android:id="@+id/dadoMin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_semibold"
            android:text="Junho é o período com menor irradiação solar durante o ano: 4,66 kWh/m².dia"
            android:textSize="20sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.381"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.477" />

        <ImageButton
            android:id="@+id/buttonVoltar"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/buttonInfo"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/baseline_question_mark_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>