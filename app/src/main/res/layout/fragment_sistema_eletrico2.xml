<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.SistemaEletrico2">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/placaSolar1"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/placa_solar"
            app:layout_constraintEnd_toStartOf="@id/placaSolar2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/placaSolar2"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/placa_solar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/placaSolar1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/caboPretoCurvado"
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:layout_marginStart="50dp"
            android:background="@drawable/cabo_preto_curvado"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placaSolar1" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="65dp"
            android:layout_height="80dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/cabo_vermelho_curvado_invertido"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/caboPretoCurvado"
            app:layout_constraintTop_toBottomOf="@+id/placaSolar2" />

        <ImageView
            android:id="@+id/conectoresImageView"
            android:layout_width="60dp"
            android:layout_height="20dp"

            android:layout_marginTop="65dp"
            android:background="@drawable/conectores_ligados"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/caboPretoCurvado"
            app:layout_constraintTop_toBottomOf="@+id/placaSolar2" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:background="@drawable/cabo_vermelho_curvado"
            android:layout_marginStart="60dp"
            app:layout_constraintEnd_toStartOf="@+id/inversorImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/placaSolar1" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:background="@drawable/cabo_preto_curvado_invertido"
            android:layout_marginEnd="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/inversorImageView"
            app:layout_constraintTop_toBottomOf="@+id/placaSolar2" />

        <ImageView
            android:id="@+id/inversorImageView"
            android:layout_width="120dp"
            android:layout_height="164dp"
            android:background="@drawable/inversor_solar"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="416dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</FrameLayout>