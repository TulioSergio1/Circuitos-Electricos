<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="290dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewLigacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-black"
            android:text="Ligação Incorreta"
            android:textSize="28sp" />

        <ImageButton
            android:id="@+id/fecharIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="160dp"
            android:layout_toEndOf="@+id/textViewLigacao"
            android:layout_toRightOf="@id/textViewLigacao"
            android:background="@drawable/ic_launcher_background"
            />

        <ImageView
            android:id="@+id/iconeAlerta"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/textViewLigacao"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iconeAlerta"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="5dp"
            android:text="A ligação apresenta erros devido a má conexão dos fios. Concerte e tente novamente."
            android:fontFamily="sans-serif-medium"
            android:textSize="16sp"
            android:textAlignment="center"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>